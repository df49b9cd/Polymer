<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <IsPackable>false</IsPackable>
    <NoWarn>$(NoWarn);CA2007</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hugo" />
    <PackageReference Include="Google.Protobuf" />
    <PackageReference Include="Grpc.Tools">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Data.Sqlite" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="NSubstitute" />
    <PackageReference Include="Yarp.ReverseProxy" />
    <PackageReference Include="coverlet.collector">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="xunit.v3" />
    <PackageReference Include="xunit.runner.visualstudio">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="CompatibilityInteropIntegrationTests.cs" />
    <Compile Include="../OmniRelay.Codegen.Tests/Generated/TestService.OmniRelay.g.cs" Link="Support/Generated/TestService.OmniRelay.g.cs" />
    <Compile Include="../TestSupport/Shards/ShardControlPlaneTestHost.cs" Link="Support/ShardControlPlaneTestHost.cs" />
    <Compile Include="../TestSupport/Support/TestRuntimeConfigurator.cs" Link="Support/TestRuntimeConfigurator.cs" />
    <ProjectReference Include="../../src/OmniRelay/OmniRelay.csproj" />
    <ProjectReference Include="../../src/OmniRelay.ControlPlane/OmniRelay.ControlPlane.csproj" />
    <ProjectReference Include="../../src/OmniRelay.Cli/OmniRelay.Cli.csproj" />
    <ProjectReference Include="../../src/OmniRelay.ShardStore.Relational/OmniRelay.ShardStore.Relational.csproj" />
    <ProjectReference Include="../../src/abstractions/OmniRelay.Identity.Abstractions/OmniRelay.Identity.Abstractions.csproj" />
    <ProjectReference Include="../../src/plugins/OmniRelay.Plugins.Internal.Identity/OmniRelay.Plugins.Internal.Identity.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="../OmniRelay.Codegen.Tests/Protos/test_service.proto" Link="Protos/test_service.proto" GrpcServices="None" />
  </ItemGroup>
</Project>
