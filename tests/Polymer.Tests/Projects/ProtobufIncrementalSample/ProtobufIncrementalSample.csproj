<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../../../src/Polymer/Polymer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../../../src/Polymer.Codegen.Protobuf.Generator/Polymer.Codegen.Protobuf.Generator.csproj"
                      ReferenceOutputAssembly="false" />
    <Analyzer Include="../../../../src/Polymer.Codegen.Protobuf.Generator/bin/$(Configuration)/net10.0/analyzers/dotnet/cs/Polymer.Codegen.Protobuf.Generator.dll" />
    <Analyzer Include="../../../../src/Polymer.Codegen.Protobuf.Generator/bin/$(Configuration)/net10.0/analyzers/dotnet/cs/Google.Protobuf.dll" />
    <Analyzer Include="../../../../src/Polymer.Codegen.Protobuf.Generator/bin/$(Configuration)/net10.0/analyzers/dotnet/cs/Polymer.Codegen.Protobuf.Core.dll" />
    <Analyzer Include="../../../../src/Polymer.Codegen.Protobuf.Generator/bin/$(Configuration)/net10.0/analyzers/dotnet/cs/Polymer.dll" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" />
    <PackageReference Include="Grpc.Tools">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="$(IntermediateOutputPath)protos/test_service.pb" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Protos/test_service.proto"
              GrpcServices="None"
              GenerateDescriptorSet="true"
              DescriptorSetOutputPath="$(IntermediateOutputPath)protos/test_service.pb" />
  </ItemGroup>

  <Target Name="EnsureSampleDescriptorDirectory" BeforeTargets="ProtobufCompile">
    <MakeDir Directories="$(IntermediateOutputPath)protos" />
  </Target>

  <Target Name="GenerateDescriptorSetManual"
          BeforeTargets="CoreCompile"
          DependsOnTargets="EnsureSampleDescriptorDirectory;Protobuf_ResolvePlatform">
    <Exec Command="&quot;$(Protobuf_ProtocFullPath)&quot; --proto_path=&quot;$(ProjectDir)Protos&quot; --descriptor_set_out=&quot;$(IntermediateOutputPath)protos/test_service.pb&quot; --include_imports &quot;$(ProjectDir)Protos/test_service.proto&quot;" />
  </Target>
</Project>
