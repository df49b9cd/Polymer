<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <NoWarn>$(NoWarn);CA2007</NoWarn>
  <OutputType>Library</OutputType>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../../../../src/OmniRelay.Codegen.Protobuf.Generator/OmniRelay.Codegen.Protobuf.Generator.csproj" />
    <Analyzer Include="../../../../src/OmniRelay.Codegen.Protobuf.Generator/bin/$(Configuration)/net10.0/analyzers/dotnet/cs/OmniRelay.Codegen.Generator.dll" />
    <Analyzer Include="../../../../src/OmniRelay.Codegen.Protobuf.Generator/bin/$(Configuration)/net10.0/analyzers/dotnet/cs/Google.Protobuf.dll" />
    <Analyzer Include="../../../../src/OmniRelay.Codegen.Protobuf.Generator/bin/$(Configuration)/net10.0/analyzers/dotnet/cs/OmniRelay.Codegen.Protobuf.Core.dll" />
    <ProjectReference Include="../../../../src/OmniRelay/OmniRelay.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Google.Protobuf" />
    <PackageReference Include="Grpc.Tools">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="$(IntermediateOutputPath)protos/test_service.pb" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="$(MSBuildThisFileDirectory)../../Protos/test_service.proto" GrpcServices="None" GenerateDescriptorSet="true" DescriptorSetOutputPath="$(IntermediateOutputPath)protos/test_service.pb" />
  </ItemGroup>

  <Target Name="EnsureSampleDescriptorDirectory" BeforeTargets="ProtobufCompile">
    <MakeDir Directories="$(IntermediateOutputPath)protos" />
  </Target>

  <Target Name="GenerateDescriptorSetManual" BeforeTargets="CoreCompile" DependsOnTargets="EnsureSampleDescriptorDirectory;Protobuf_ResolvePlatform">
    <Exec Command="&quot;$(Protobuf_ProtocFullPath)&quot; --proto_path=&quot;$(MSBuildThisFileDirectory)../../Protos&quot; --descriptor_set_out=&quot;$(IntermediateOutputPath)protos/test_service.pb&quot; --include_imports &quot;$(MSBuildThisFileDirectory)../../Protos/test_service.proto&quot;" />
  </Target>
</Project>
