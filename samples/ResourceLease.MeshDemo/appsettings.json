  "meshDemo": {
    "serviceName": "resourcelease-mesh-demo",
    "namespace": "resourcelease.mesh",
    "dataDirectory": "mesh-data"
  },
  "mesh": {
    "gossip": {
      "enabled": false,
      "nodeId": "mesh-demo-${HOSTNAME}",
