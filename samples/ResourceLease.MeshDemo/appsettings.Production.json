{
  "mesh": {
    "gossip": {
      "enabled": true,
      "nodeId": "mesh-prod-${HOSTNAME}",
      "role": "resourcelease-gateway",
      "clusterId": "prod-cluster",
      "region": "primary-region",
      "meshVersion": "1.0.0",
      "port": 47901,
      "advertiseHost": "relay-prod.internal",
      "fanout": 5,
      "suspicionInterval": "00:00:05",
      "pingTimeout": "00:00:03",
      "retransmitLimit": 5,
      "metadataRefreshPeriod": "00:00:10",
      "tls": {
        "certificatePath": "/etc/omnirelay/certs/mesh-gossip.pfx",
        "certificatePassword": "change-me",
        "allowUntrustedCertificates": false,
        "checkCertificateRevocation": true,
        "allowedThumbprints": [
          "A1B2C3D4E5F60718293A4B5C6D7E8F9012345678"
        ]
      },
      "seedPeers": [
        "relay-a.internal:47901",
        "relay-b.internal:47901",
        "relay-c.internal:47901"
      ]
    },
    "leadership": {
      "enabled": true,
      "leaseDuration": "00:00:10",
      "renewalLeadTime": "00:00:04",
      "evaluationInterval": "00:00:01",
      "scopes": [
        {
          "scopeId": "global-control",
          "kind": "global"
        }
      ],
      "shards": [
        {
          "namespace": "resourcelease",
          "shards": [
            "a",
            "b",
            "c"
          ]
        }
      ]
    }
  }
}
