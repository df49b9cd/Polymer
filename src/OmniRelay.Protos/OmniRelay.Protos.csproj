<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <IsTrimmable>true</IsTrimmable>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <EnableAotAnalyzer>true</EnableAotAnalyzer>
    <EnableSingleFileAnalyzer>true</EnableSingleFileAnalyzer>
    <AssemblyName>OmniRelay.Protos</AssemblyName>
    <RootNamespace>OmniRelay</RootNamespace>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>OmniRelay.Protos</PackageId>
    <PackageOutputPath>$(MSBuildThisFileDirectory)..\..\artifacts\packages</PackageOutputPath>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <RepositoryUrl>https://github.com/omnirelay/omnirelay</RepositoryUrl>
    <Description>OmniRelay protobuf contracts and generated gRPC assets for control-plane/data-plane communication.</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <Protobuf Include="Protos\leadership_control.proto" GrpcServices="Server" />
    <Protobuf Include="Protos\shard_control.proto" GrpcServices="Server" />
    <Protobuf Include="Protos\control_plane.proto" GrpcServices="Both" />
    <Protobuf Include="Protos\ca.proto" GrpcServices="Both" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" />
    <PackageReference Include="Grpc.Tools" PrivateAssets="all" />
    <PackageReference Include="Grpc.Net.Client" />
    <PackageReference Include="Grpc.AspNetCore.Server" />
  </ItemGroup>
</Project>
