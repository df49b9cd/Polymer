<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>OmniRelay</AssemblyName>
    <RootNamespace>OmniRelay</RootNamespace>
    <PackageId>OmniRelay</PackageId>
    <Description>OmniRelay dispatcher, transports, codecs, middleware, and peer management for .NET.</Description>
    <PackageTags>omnirelay;yarpc;rpc;grpc;http;middleware</PackageTags>
    <PackageReadmeFile>OmniRelay.README.md</PackageReadmeFile>
    <PackageIcon>omnirelay-icon.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hugo" />
    <PackageReference Include="Grpc.AspNetCore.Server" />
    <PackageReference Include="Grpc.Net.Client" />
    <PackageReference Include="Grpc.HealthCheck" />
    <PackageReference Include="Google.Protobuf" />
    <PackageReference Include="JsonSchema.Net" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\docs\nuget\OmniRelay.md" Pack="true" PackagePath="OmniRelay.README.md" Visible="false" />
    <None Include="..\..\branding\omnirelay-icon.png" Pack="true" PackagePath="omnirelay-icon.png" Visible="false" />
  </ItemGroup>

</Project>
