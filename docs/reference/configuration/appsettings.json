{
  "polymer": {
    "service": "payments",
    "inbounds": {
      "http": [
        { "urls": [ "http://0.0.0.0:8080" ] }
      ],
      "grpc": [
        { "urls": [ "http://0.0.0.0:8090" ] }
      ]
    },
    "outbounds": {
      "ledger": {
        "unary": {
          "grpc": [
            {
              "addresses": [ "http://ledger:9090" ],
              "remoteService": "ledger"
            }
          ]
        }
      }
    },
    "middleware": {
      "inbound": {
        "unary": [
          "Polymer.Core.Middleware.RpcLoggingMiddleware, Polymer"
        ]
      }
    },
    "logging": {
      "level": "Information",
      "overrides": {
        "Polymer.Transport.Grpc": "Debug"
      }
    }
  }
}
